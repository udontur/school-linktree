---
const { name, link, icon } = Astro.props;
---
<a href={link} class="links">
    <button class="buttons">
        <img src={'/icons/'+icon}, alt={icon}, class="svgs" fetchpriority="high">
        <div class="titles">{name}</div>
    </button>
</a>

<!-- CSS STYLE -->
<style>
    .links{
        --light-red: rgb(253, 209, 165);
        --red: #DA2034;
        --red-second: #941320;
    }
    .svgs{
        width: 1.5rem;
    }
    .titles{

    }
    .buttons{
        font-family: "Inter", sans-serif;
        font-weight: 500;
        cursor: pointer;
        display: flex;
        align-items: center;
        /* TODO */
        width: 20rem;
        appearance: none;
        background-image: radial-gradient(100% 100% at 100% 0, var(--light-red) 0, var(--red) 100%);
        border: 0;
        gap: 0.5rem;
        border-radius: 0.5rem;
        box-shadow: rgba(45, 35, 66, .4) 0 0.00625rem 1.5rem,rgba(45, 35, 66, .3) 0 0.4rem 0.8rem -0.2rem,rgba(58, 65, 111, .5) 0 -0.2rem 0 inset;
        box-sizing: border-box;
        color: #fff;
        cursor: pointer;
        display: inline-flex;
        justify-content: center;
        line-height: 1;
        list-style: none;
        overflow: hidden;
        padding: 1rem 1.5rem;
        position: relative;
        text-align: left;
        text-decoration: none;
        transition: box-shadow .15s,transform .15s;
        user-select: none;
        -webkit-user-select: none;
        touch-action: manipulation;
        white-space: nowrap;
        will-change: box-shadow,transform;
        font-size: 1rem;
    }

    .buttons:focus {
        box-shadow: var(--red-second)  0 0 0 0.1rem inset, rgba(45, 35, 66, .4) 0 0.1rem 0.25rem, rgba(45, 35, 66, .3) 0 0.4rem 0.8rem -0.2remx, var(--red-second)  0 -0.2rem 0 inset;
    }

    .buttons:hover {
        box-shadow: rgba(45, 35, 66, .4) 0 0.25rem 0.5rem, rgba(45, 35, 66, .3) 0 0.1rem 0.25rem, var(--red-second)  0 -0.2rem 0 inset;
        transform: translateY(-0.1rem);
    }

    .buttons:active {
        box-shadow: var(--red-second) 0 -0.2rem 0.5rem inset;
        transform: translateY(0.1rem);
    }
</style>