---
import { Image } from 'astro:assets';
---
<div id="container">
    <Image
        src="/images/dsc.svg",
        alt="dsc logo",
        width="128",
        height="128"
    />
    <div class="schoolName">
        <div id="dsc">DSC</div>
        <div id="linktree"><div class="italic">Link</div>tree</div>
    </div>
</div>

<!-- CSS STYLE -->
<style>
    #container{
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
    }
    @media (max-width: 500px){
        img{
            width: 5rem;
            height: 5rem;
        }
    }

    .schoolName{
        line-height: 1.7rem;
        font-size: 2rem;
    }
    #dsc{
        font-weight: 700;
        letter-spacing: -0.2rem !important;
    }
    #linktree{
        font-family: "Playfair Display", serif;
        font-weight: 400;
        display: flex;
    }
    .italic{
        font-style: italic;
    }
</style>